<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ResultMad">

<!-- TODO: Update blank fragment layout -->

<ImageView
    android:id="@+id/background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-80dp"
    android:src="@drawable/background"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    android:contentDescription="@string/todo2" />

    <TextView
        android:id="@+id/kgText3"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/baloo"
        android:text="@string/kgText3"
        android:textColor="#4E9258"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nitrogenOxide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@+id/kgText2" />

    <TextView
        android:id="@+id/kgText1"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/baloo"
        android:text="@string/kgText1"
        android:textColor="#4E9258"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/carbonDioxide"
        app:layout_constraintEnd_toStartOf="@+id/kgText2"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/kgText2"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/baloo"
        android:text="@string/kgText2"
        android:textColor="#4E9258"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/methane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nitrogenOxide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="240dp"
        android:fontFamily="@font/baloo"
        android:text="@string/nitrogen_oxide"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/carbonDioxide" />

    <TextView
        android:id="@+id/carbonDioxide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="230dp"
        android:layout_marginBottom="240dp"
        android:fontFamily="@font/baloo"
        android:text="@string/carbon_dioxide"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/methane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="240dp"
        android:fontFamily="@font/baloo"
        android:text="@string/methane"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nitrogenOxide"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/carbonDioxide" />

    <TextView
        android:id="@+id/resultStatement"
        android:layout_width="213dp"
        android:layout_height="151dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/baloo"
        android:text="@string/the_greenhouse_gas_emission_from_your_drive_is_hurting_the_squirrels"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_track"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#4E9258"
        android:fontFamily="@font/baloo"
        android:text="Track Emissions"
        android:textSize="23dp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/emissionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/baloo"
        android:text="@string/you_emitted_a_total_of"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultStatement" />

    <TextView
        android:id="@+id/messageMad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/baloo"
        android:text="@string/oh_no"
        android:textColor="#4E9258"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="237dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/angryface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultStatement"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo3"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>